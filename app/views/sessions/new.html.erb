
<div id="login_form">
<p id=”alert”><%= alert %></p>
<h1>Login</h1>
<%= form_tag "/sessions" do |form| %>
  <div class=”field”>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div class=”field”>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class=”actions”>
    <%= submit_tag "login" %>
  </div>

<% end %>
</div>

